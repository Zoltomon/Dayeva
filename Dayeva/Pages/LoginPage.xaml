<Page x:Class="Dayeva.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dayeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Введите логин:"/>
            <TextBox Name="TxbLog"/>
            <TextBlock Text="Введите пароль:"/>
            <TextBox Name="TxbPass"/>
            <Button Content="Вход" Name="BtnAuto" Click="BtnAuto_Click"/>
            <Button Content="Регистрация" Name="BtnReg" Click="BtnReg_Click"/>
        </StackPanel>
    </Grid>
</Page>
